[user]
  name = Daniel Eden
  email = dan.eden@me.com
[push]
  default = current
[color]
  ui = 1
[alias]
  s = status -sb
  status = status -sb
  a = add -A .
  co = checkout
  cm = commit
  p = push
  cloen = clone

  # Show verbose output about tags, branches or remotes
  tags = tag -l
  branches = branch -a
  remotes = remote -v

  # Pull submodules as well as main repo
  pullall = !f(){ git pull "$@" && git submodule update --init --recursive; }; f

  # Open on GitHub (requires Hub)
  open = browse

  # Show a pretty visual graph of diffs across branches
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

  # Pop the latest stash. This is usually the only thing I do with git stash anyway.
  pop = stash pop stash@{0}
[core]
  editor = vim -c start
	excludesfile = /Users/dte/.gitignore_global
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[merge]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool]
  prompt = false
[diff]
  tool = Kaleidoscope
[credential]
  helper = osxkeychain
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[github]
  user = daneden
[grep]
  lineNumber = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
